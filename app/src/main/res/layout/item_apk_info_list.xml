<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_apk_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_apk_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_apk_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_apk_level"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/tv_apk_install_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_apk_dev"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_apk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_apk_level"
        android:layout_toRightOf="@id/img_apk_icon"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_apk_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_apk_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_apk_icon"/>

    <TextView
        android:id="@+id/tv_apk_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_apk_version"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_apk_icon"/>

</RelativeLayout>